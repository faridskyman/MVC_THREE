@model MVC_Three.ViewModels.RandomMovieViewModel
@{
    ViewBag.Title = "Random";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@*<h2>@ViewBag.Movie.Name</h2>*@
@*<h2>@( ((Movie)ViewData["Movie"]).Name)</h2>*@

@*this is a commnet*@
@{ 
    var classname = Model.Customers.Count >= 2 ? "popular" : null;
}

<h2 class="@classname">@Model.Movie.Name</h2>


@if (Model.Customers.Count == 0)
{
    <text>No one has rested this movie before.</text>
}
else
{
<ul>
    <p>Number of customers: @Model.Customers.Count</p>

    @foreach (var customer in Model.Customers)
    {
        <li>@customer.Name</li>
    }

</ul>
}