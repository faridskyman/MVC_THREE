@model MVC_Three.ViewModels.NewFeedbackViewModel
@{
    ViewBag.Title = "New Feedback Form";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>FeedbackForm</h2>

@using (Html.BeginForm(actionName: "Save", controllerName: "Feedback"))
{
    <div class="form-group">
        @Html.LabelFor(m => m.feedback.FeedbackTypeId)
        @Html.DropDownListFor(m => m.feedback.FeedbackTypeId,
                      new SelectList(Model.feedbackTypes, "Id", "Name"),
                      "--Select--",
                      new { @class = "form-control" })
    </div>


    <div class="form-group">
        @Html.LabelFor(m => m.feedback.Description)
        @Html.TextAreaFor(m => m.feedback.Description, new { @class = "form-control" })
    </div>


    <div class="form-group">
        @Html.LabelFor(m => m.feedback.Name)
        @Html.TextBoxFor(m => m.feedback.Name, new { @class = "form-control" })
        @Html.LabelFor(m => m.feedback.Email)
        @Html.TextBoxFor(m => m.feedback.Email, new { @class = "form-control" })
    </div>
    
    <button type="submit" class="btn btn-primary">Save</button>
}

